<Window x:Class="InterficieSpotify.Songs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterficieSpotify"
        mc:Ignorable="d"
        Title="Cançons" Height="500" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFA29723"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FF8A897C" Offset="1"/>
                <GradientStop Color="#FFE7E4C7" Offset="0.87"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10,10,10,10">
            <Button x:Name="Enrrere" Content="🔙" Click="Enrrere_Click" Margin="0,0,10,0" Height="38" Width="50" FontSize="20" Background="Transparent" BorderBrush="Transparent"/>
            <Button x:Name="CarregarDades" Content="Obtenir Totes" Click="CarregarDades_Click" Margin="0,0,10,0" Height="38" FontSize="16"/>
            <Button x:Name="Post" Content="Afegir Cançó" Click="AfegirCancoDesdeGrid" Margin="0,0,10,0" Height="38" FontSize="16" Background="LightGreen"/>
        </StackPanel>

        <DataGrid x:Name="dgSongs" 
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserSortColumns="True"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id, Mode=OneWay}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Títol" Binding="{Binding Titol, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Artista" Binding="{Binding Artista, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Àlbum" Binding="{Binding Album, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Durada (seg)" Binding="{Binding Durada, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" Width="*"/>
                <DataGridTemplateColumn Header="Accions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Desar" Click="GuardarCancoDesdeGrid" Margin="2" Padding="5" Background="LightBlue" FontSize="10"/>
                                <Button x:Name="btnEliminar" Content="Eliminar" Click="EliminarCancoDesdeGrid" Margin="2" Padding="5" Background="LightCoral" FontSize="10"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>