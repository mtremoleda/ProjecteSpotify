<Window x:Class="InterficieSpotify.Songs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterficieSpotify"
        mc:Ignorable="d"
        Title="Songs" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFA29723"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FF8A897C" Offset="1"/>
                <GradientStop Color="#FFE7E4C7" Offset="0.87"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Enrrere" Content="🔙" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Enrrere_Click" Background="{x:Null}" Height="38" Width="50" FontSize="20" BorderBrush="{x:Null}"/>
        <Button x:Name="CarregarDades" Content="CarregarDades" HorizontalAlignment="Left" Margin="340,17,0,0" VerticalAlignment="Top" Click="CarregarDades_Click" Height="44" Width="172" FontSize="22" Grid.Column="1">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>


        <DataGrid x:Name="dgSongs" 
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  VerticalAlignment="Top"
                  Height="316" Margin="18,90,18,0" SelectionChanged="dgSongs_SelectionChanged" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
